{
  "name": "valya",
  "version": "0.2.0",
  "description": "Higher-order component for validation in React",
  "keywords": [ "react", "validation", "validator" ],
  "homepage": "https://github.com/deepsweet/valya",
  "repository": "deepsweet/valya",
  "contributors": [
    "Kir Belevich <kir@soulshine.in> (https://github.com/deepsweet)",
    "Denis Koltsov <iam@mistadikay.com> (https://github.com/mistadikay)"
  ],
  "main": "build/index.js",
  "files": [
    "build/",
    "LICENSE"
  ],
  "dependencies": {
    "react": "0.13.x",
    "babel-runtime": "5.8.x"
  },
  "devDependencies": {
    "husky": "0.9.x",

    "jsdom": "6.1.x",
    "tape": "4.2.x",
    "tap-spec": "4.0.x",
    "sinon": "1.15.x",
    "isparta": "3.0.x",
    "coveralls": "2.11.x",

    "eslint": "1.1.x",
    "babel-eslint": "4.0.x",
    "eslint-plugin-babel": "2.1.x",
    "babel": "5.8.x",
    "babel-core": "5.8.x"
  },
  "scripts": {
    "build": "rm -rf build/ && babel lib/ -d build/",
    "dev": "npm run build -- -w",
    "lint": "eslint lib/ test/",

    "unit": "babel-node ./node_modules/.bin/tape test/lib/*.js | tap-spec",
    "coverage": "rm -rf coverage/ && babel-node ./node_modules/.bin/isparta cover tape -- test/lib/*.js | tap-spec",
    "test": "npm run lint && npm run coverage",
    "travis": "npm run test && cat coverage/lcov.info | coveralls",

    "prepush": "npm run lint",
    "prepublish": "npm run build"
  },
  "engines": {
    "node": ">=0.12.0",
    "npm": ">=2.7.0"
  },
  "license": "MIT"
}
